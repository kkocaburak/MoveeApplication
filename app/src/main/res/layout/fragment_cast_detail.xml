<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screens.detail.castdetail.view.CastFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_cast_detail_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/huge_dp_380" />

        <TextView
            android:id="@+id/fragment_cast_detail_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Black_SF_PRO_Bold_28"
            android:layout_marginTop="@dimen/small_dp_16"
            android:layout_marginStart="@dimen/medium_dp_32"/>

        <TextView
            android:id="@+id/fragment_cast_detail_txt_bio"
            android:layout_width="@dimen/huge_dp_300"
            android:layout_height="wrap_content"
            style="@style/Black_SF_PRO_Regular_16"
            android:gravity="start"
            android:layout_marginTop="@dimen/small_dp_16"
            android:layout_marginStart="@dimen/medium_dp_32"/>

        <TextView
            android:id="@+id/fragment_cast_detail_txt_see_more"
            style="@style/Blue_SF_PRO_Semi_Bold_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_dp_32"
            android:layout_marginTop="@dimen/small_dp_8"
            android:text="@string/full_bio_string" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_dp_16"
            android:layout_marginStart="@dimen/medium_dp_32"
            android:layout_marginBottom="@dimen/small_dp_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_cast_detail_txt_string_born"
                android:layout_width="@dimen/large_dp_64"
                android:layout_height="@dimen/small_dp_24"
                android:gravity="center_vertical"
                style="@style/Black_SF_PRO_Bold_16"
                android:text="@string/born_string"/>

            <TextView
                android:id="@+id/fragment_cast_detail_txt_born"
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_dp_24"
                android:gravity="center_vertical"
                style="@style/Black_SF_PRO_Regular_16"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/Black_SF_PRO_Bold_28"
            android:layout_marginTop="@dimen/small_dp_8"
            android:layout_marginStart="@dimen/medium_dp_32"
            android:text="@string/movies_string"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_cast_detail_recycler_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_dp_8"
            android:layout_marginStart="@dimen/medium_dp_32"/>

    </LinearLayout>

</ScrollView>